<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Building name</th>
    <th>Street address 1</th>
    <th>Street address 2</th>
    <th>City</th>
    <th>State</th>
    <th>Zipcode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.building_name %></td>
    <td><%= address.street_address_1 %></td>
    <td><%= address.street_address_2 %></td>
    <td><%= address.city %></td>
    <td><%= address.state %></td>
    <td><%= address.zipcode %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

